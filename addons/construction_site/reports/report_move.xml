<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="project_task_move_report_form" model="ir.ui.view">
                <field name="name">Project Product Move Form</field>
                <field name="model">project.task.move.report</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Form project.task.move.report">
                        <sheet>
                            <group>
                                <group string="Quantitys">
                                    <field name="required_qty"/>
                                    <field name="planned_qty"/>
                                    <field name="received_qty"/>
                                </group>
                                <group string="Procurement">
                                    <field name="location_id"/>
                                    <field name="user_ids"/>
                                    <field name="picking_id"/>
                                    <field name="state"/>
                                    <field name="picking_date"/>
                                    <field name="effective_date"/>
                                </group>
                            </group>
                            <group string="Source Data">
                                <group>
                                    <field name="task_id"/>
                                    <field name="stage_id"/>
                                    <field name="product_id"/>
                                </group>
                                <group>
                                    <field name="project_id"/>
                                    <field name="project_status_id"/>
                                    <field name="manager_id"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
        </record>

        <record id="project_task_move_report_pivot" model="ir.ui.view">
            <field name="name">Project Product Move Report</field>
            <field name="model">project.task.move.report</field>
            <field name="arch" type="xml">
                <pivot string="Project Product Procurement Pivot" sample="1">
                    <field name="task_id" type="row"/>
                    <field name="picking_id" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="picking_date" interval="week" type="col"/>
                    <field name="required_qty" type="measure"/>
                    <field name="planned_qty" type="measure"/>
                    <field name="received_qty" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="project_task_move_report_graph" model="ir.ui.view">
            <field name="name">Project Product Move</field>
            <field name="model">project.task.move.report</field>
            <field name="arch" type="xml">
                <graph string="Project Product Procurement Graph" sample="1">
                    <field name="product_id"/>
                    <field name="required_qty" type="measure"/>
                    <field name="received_qty" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="project_task_move_report_list" model="ir.ui.view">
            <field name="name">Project Product Move list</field>
            <field name="model">project.task.move.report</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list create="False">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field class="col_w" name="product_id"/>
                    <field name="required_qty"/>
                    <field name="planned_qty"/>
                    <field name="received_qty"/>
                    <field name="state"/>
                    <field name="picking_id"/>
                    <field name="picking_date"/>
                    <field name="effective_date"/>
                </list>
            </field>
        </record>

        <record id="project_task_move_report_action" model="ir.actions.act_window">
            <field name="name">Project Product Move Report</field>
            <field name="res_model">project.task.move.report</field>
            <field name="view_mode">pivot,list,graph,form</field>
        </record>

        <record id="project_task_move_report_search" model="ir.ui.view">
            <field name="name">project.task.move.report.search</field>
            <field name="model">project.task.move.report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="product_id"/>
                    <field name="state"/>
                    <field name="picking_id"/>
                </search>
            </field>
        </record>

        <menuitem name="Report Move Material"
            id="project_task_move_report_menu"
            sequence="6"
            parent="construction_site_menu_reports"
            action="project_task_move_report_action"/>

</odoo>

