<odoo>
    <record id="view_document_template_parameter_list" model="ir.ui.view">
        <field name="name">document.template.parameter.list</field>
        <field name="model">document.template.parameter</field>
        <field name="arch" type="xml">
            <list>
                <field name="key"/>
                <field name="value"/>
            </list>
        </field>
    </record>

    <record id="view_document_template_parameter_form" model="ir.ui.view">
        <field name="name">document.template.parameter.form</field>
        <field name="model">document.template.parameter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="key"/>
                        <field name="value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="action_document_template_parameter" model="ir.actions.act_window">
        <field name="name">Document Template Parameters</field>
        <field name="res_model">document.template.parameter</field>
        <field name="view_mode">list,form</field>
    </record>

