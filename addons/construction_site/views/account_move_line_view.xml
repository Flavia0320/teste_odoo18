<?xml version="1.0" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='invoice_line_ids']//field[@name='account_id']"
                position="after"
            >
                <field
                    name="project_id"
                    options="{'no_create': True, 'no_open': True}"
                />
                <field
                    name="task_id"
                    options="{'no_create': True, 'no_open': True}"
                    force_save="1"
                />
            </xpath>
            <xpath
                expr="//field[@name='line_ids']//field[@name='account_id']"
                position="after"
            >
                <field name="project_id" force_save="1" />
                <field name="task_id" invisible="1" force_save="1" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="before">
                <field name="project_id" invisible="1"/>
                <field name="task_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
