        <record id="project_task_transport_report_pivot" model="ir.ui.view">
            <field name="name">Project Transport Pivot</field>
            <field name="model">project.task.transport.report</field>
            <field name="arch" type="xml">
                <pivot string="Project Transport Pivot" sample="1">
                    <field name="project_id" type="row"/>
                    <field name="task_id" type="row"/>
                    <field name="transport_id" type="row"/>
                    <field name="planned_kms" type="measure"/>
                    <field name="planned_cost" type="measure"/>
                    <field name="effective_kms" type="measure"/>
                    <field name="effective_cost" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="project_task_transport_report_graph" model="ir.ui.view">
            <field name="name">Project Transport Graph</field>
            <field name="model">project.task.transport.report</field>
            <field name="arch" type="xml">
                <graph string="Project Transport Graph" sample="1">
                    <field name="transport_id"/>
                    <field name="planned_kms" type="measure"/>
                    <field name="planned_cost" type="measure"/>
                    <field name="effective_kms" type="measure"/>
                    <field name="effective_cost" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="project_task_transport_report_list" model="ir.ui.view">
            <field name="name">Project Transport list</field>
            <field name="model">project.task.transport.report</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list create="False">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field class="col_w" name="transport_id"/>
                    <field name="planned_kms"/>
                    <field name="planned_cost"/>
                    <field name="effective_kms"/>
                    <field name="effective_cost"/>
                </list>
            </field>
        </record>

        <record id="project_task_transport_report_action" model="ir.actions.act_window">
            <field name="name">Project Transport Report</field>
            <field name="res_model">project.task.transport.report</field>
            <field name="view_mode">pivot,list,graph</field>
        </record>

        <menuitem name="Report Transport"
            id="project_task_transport_report_menu"
            sequence="37"
            parent="construction_site.construction_site_menu_reports"
            action="project_task_transport_report_action"/>
    
</odoo>
        
