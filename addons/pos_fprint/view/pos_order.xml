<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="pos_order_form" model="ir.ui.view"> <!-- Aceastra structura trebuie stearsa sau reglata -->
                <field name="name">pos.order Form</field>
                <field name="model">pos.order</field>
                <field name="type">form</field> 
                <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//page[@name='extra']" position="inside">
                    	<group string="Fprinter" invisible="fp_active == False">
                    		<group>
								<field name="fp_active"/>
								<field name="fp_state"/>
								<field name="fp_task_id"/>
								<field name="fp_print_date"/>
                    		</group>
                    		<group>
                    			<field name="fp_number"/>
                    			<field name="fp_result_date"/>
                    		</group>
                    	</group>
                    </xpath>
                </field>
        </record>
</odoo>
        