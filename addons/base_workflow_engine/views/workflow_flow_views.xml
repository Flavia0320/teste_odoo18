<odoo>
    <record id="view_workflow_flow_list" model="ir.ui.view">
        <field name="name">workflow.flow.list</field>
        <field name="model">workflow.flow</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model_name"/>
            </list>
        </field>
    </record>

    <record id="view_workflow_flow_form" model="ir.ui.view">
        <field name="name">workflow.flow.form</field>
        <field name="model">workflow.flow</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_name"/>
                    </group>
                    <notebook>
                        <page string="Stages">
                            <field name="stage_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="is_entry"/>
                                    <field name="is_stop"/>
                                </list>
                            </field>
                        </page>

                        <page string="Transitions">
                            <field name="transition_ids">
                                <list editable="bottom">
                                    <field name="from_stage_id"/>
                                    <field name="to_stage_id"/>
                                    <field name="constraint_ids">
                                        <list editable="bottom">
                                            <field name="domain"/>
                                            <field name="group_ids"/>
                                        </list>
                                    </field>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_workflow_flow" model="ir.actions.act_window">
        <field name="name">Flows</field>
        <field name="res_model">workflow.flow</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
