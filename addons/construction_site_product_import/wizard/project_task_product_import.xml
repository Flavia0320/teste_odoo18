<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="project_task_product_import_form" model="ir.ui.view">
                <field name="name">project.task.product.import Form</field>
                <field name="model">project.task.product.import</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Import Task Products Wizard">
                        <sheet>
                            <group>
                                <group>
                                    <field name="task_id" invisible="1"/>
                                    <field name="attachment_id" widget="binary"/>
                                </group>
                            </group>
                        </sheet>
                        <footer>
                            <button name="execute" string="Execute" class="oe_highlight" type="object" />
                            <button special="cancel" string="Cancel" />
                        </footer>
                    </form>
                </field>
        </record>

        <record id="project_task_product_import_action" model="ir.actions.act_window">
            <field name="name">project.task.product.import Action</field>
            <field name="res_model">project.task.product.import</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>

