<odoo>
    <record id="view_workflow_flow_form" model="ir.ui.view">
        <field name="name">workflow.flow.form</field>
        <field name="model">workflow.flow</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Sales Process"/>
                        </h1>
                    </div>
                    <group>
                        <field name="model_name" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Stages">
                            <field name="stage_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="is_entry"/>
                                    <field name="is_stop"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Transitions">
                            <field name="transition_ids"
                                   context="{'default_flow_id': active_id, 'model_name': model_name}">
                                <tree>
                                    <field name="name" string="Transition"/>
                                    <field name="from_stage_id"/>
                                    <field name="to_stage_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Stage Mappings">
                            <field name="stage_mapping_ids">
                                <tree editable="bottom">
                                    <field name="workflow_stage_id"/>
                                    <field name="native_stage_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    </odoo>