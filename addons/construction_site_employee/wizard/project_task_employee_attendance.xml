<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="task_employee_attendance_form" model="ir.ui.view">
                <field name="name">project.task.employee.attendance Wiz</field>
                <field name="model">project.task.employee.attendance</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Project Task Employee Attendance Wizard">
                        <sheet>
                            <group>
                                <group>
                                    <field name="employee_id"/>
                                </group>
                                <group>
                                    <field name="consumed_hours"/>
                                </group>
                            </group>
                            <notebook>
                                <page string="Tasks">
                                    <field name="employee_ids">
                                        <list
                                            create="0">
                                                <field name="name" readonly="1"/>
                                                <field name="work_phone" readonly="1"/>
                                                <field name="work_email" readonly="1"/>
                                                <field name="department_id" readonly="1"/>
                                                <field name="job_id" readonly="1"/>
                                        </list>
                                    </field>
                                </page>
                            </notebook>
                            <footer>
                                <button name="action_confirm" string="Confirm" type="object" />
                            </footer>
                        </sheet>
                    </form>
                </field>
        </record>

        <record id="task_employee_attendance_action" model="ir.actions.act_window">
            <field name="name">task_employee_attendance_action</field>
            <field name="res_model">project.task.employee.attendance</field>
            <field name="view_mode">form</field>
        </record>
</odoo>

