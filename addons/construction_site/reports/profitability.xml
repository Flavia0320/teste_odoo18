<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="project_task_revenu_report_list" model="ir.ui.view">
            <field name="name">Project Report list</field>
            <field name="model">project.task.revenu.report</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list create="False">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="assigned_users"/>
                    <field name="real_cost"/>
                    <field name="real_revenue"/>
                    <field name="planned_profit"/>
                    <field name="real_profit"/>
                    <field name="employee_cost"/>
                    <field name="subcontracting_cost"/>
                    <field name="equipment_cost"/>
                    <field name="transport_cost"/>
                    <field name="material_cost"/>
                </list>
            </field>
        </record>

        <record id="project_task_revenu_report_graph" model="ir.ui.view">
            <field name="name">Project Report Graph</field>
            <field name="model">project.task.revenu.report</field>
            <field name="type">graph</field> 
            <field name="arch" type="xml">
                <graph string="Project Balance Report" sample="1">
                    <field name="project_id" type="row"/>
                    <field name="task_id" type="row"/>
                    <field name="real_profit" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="project_task_revenu_report_pivot" model="ir.ui.view">
            <field name="name">Project Report Pivot</field>
            <field name="type">pivot</field> 
            <field name="model">project.task.revenu.report</field>
            <field name="arch" type="xml">
                <pivot string="Project Balance Report" sample="1">
                    <field name="project_id" type="row"/>
                    <field name="task_id" type="row"/>
                    <field name="planned_profit" type="measure"/>
                    <field name="real_profit" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="project_task_revenu_report_action" model="ir.actions.act_window">
            <field name="name">Project Report</field>
            <field name="res_model">project.task.revenu.report</field>
            <field name="view_mode">pivot,list,graph</field>
            <field name="domain">[('parent_id','=',False)]</field>
        </record>

        <menuitem name="Project Profitability"
            id="project_task_revenu_report_menu"
            sequence="30"
            parent="construction_site_menu_reports"
            action="project_task_revenu_report_action"/>

</odoo>
        
