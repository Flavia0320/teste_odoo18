<odoo>
    <record id="view_workflow_constraint_list" model="ir.ui.view">
        <field name="name">workflow.constraint.list</field>
        <field name="model">workflow.constraint</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="domain"/>
                <field name="group_ids" widget="many2many_tags"/>
                <field name="flow_id"/>
            </list>
        </field>
    </record>

    <record id="view_workflow_constraint_form" model="ir.ui.view">
        <field name="name">workflow.constraint.form</field>
        <field name="model">workflow.constraint</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" placeholder="e.g., Draft State Check"/>
                        <field name="flow_id" help="Optional: Associate this constraint with a specific workflow"/>
                    </group>
                    <group>
                        <field name="domain" widget="domain" 
                               placeholder="[('state', '=', 'draft')]"
                               help="Domain expression to evaluate before allowing the transition. Use standard Odoo domain syntax."/>
                        <field name="group_ids" widget="many2many_tags"
                               help="Users must belong to at least one of these groups to use this transition. Leave empty to allow all users."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_constraint_search" model="ir.ui.view">
        <field name="name">workflow.constraint.search</field>
        <field name="model">workflow.constraint</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="domain"/>
                <field name="group_ids"/>
                <field name="flow_id"/>
                <filter string="With Group Restrictions" name="with_groups" domain="[('group_ids', '!=', False)]"/>
                <filter string="No Group Restrictions" name="no_groups" domain="[('group_ids', '=', False)]"/>
                <filter string="Associated with Flow" name="with_flow" domain="[('flow_id', '!=', False)]"/>
                <filter string="No Flow Association" name="no_flow" domain="[('flow_id', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_workflow_constraint" model="ir.actions.act_window">
        <field name="name">Constraints</field>
        <field name="res_model">workflow.constraint</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
