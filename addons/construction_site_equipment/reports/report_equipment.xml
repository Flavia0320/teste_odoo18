        <record id="project_task_equipment_report_pivot" model="ir.ui.view">
            <field name="name">Project Equipment Pivot</field>
            <field name="model">project.task.equipment.report</field>
            <field name="arch" type="xml">
                <pivot string="Project Equipment Pivot" sample="1">
                    <field name="project_id" type="row"/>
                    <field name="task_id" type="row"/>
                    <field name="equipment_id" type="row"/>
                    <field name="planned_hours" type="measure"/>
                    <field name="planned_cost" type="measure"/>
                    <field name="effective_hours" type="measure"/>
                    <field name="effective_cost" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="project_task_equipment-report_graph" model="ir.ui.view">
            <field name="name">Project Equipment Graph</field>
            <field name="model">project.task.equipment.report</field>
            <field name="arch" type="xml">
                <graph string="Project Product Procurement Graph" sample="1">
                    <field name="equipment_id"/>
                    <field name="planned_hours" type="measure"/>
                    <field name="planned_cost" type="measure"/>
                    <field name="effective_hours" type="measure"/>
                    <field name="effective_cost" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="project_task_equipment_report_list" model="ir.ui.view">
            <field name="name">Project Equipment list</field>
            <field name="model">project.task.equipment.report</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list create="False">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field class="col_w" name="equipment_id"/>
                    <field name="planned_hours"/>
                    <field name="planned_cost"/>
                    <field name="effective_hours"/>
                    <field name="effective_cost"/>
                </list>
            </field>
        </record>

        <record id="project_task_equipment_report_action" model="ir.actions.act_window">
            <field name="name">Project Equipment Report</field>
            <field name="res_model">project.task.equipment.report</field>
            <field name="view_mode">pivot,list,graph</field>
        </record>

        <menuitem name="Report Equipment"
            id="project_task_equipment_report_menu"
            sequence="36"
            parent="construction_site.construction_site_menu_reports"
            action="project_task_equipment_report_action"/>
    
</odoo>
        
