<odoo>
    <record id="view_workflow_transition_list" model="ir.ui.view">
        <field name="name">workflow.transition.list</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="from_stage_id"/>
                <field name="to_stage_id"/>
            </list>
        </field>
    </record>

    <record id="view_workflow_transition_form" model="ir.ui.view">
        <field name="name">workflow.transition.form</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="from_stage_id" domain="[('flow_id', '=', parent.flow_id)]"/>
                        <field name="to_stage_id" domain="[('flow_id', '=', parent.flow_id)]"/>
                    </group>
                    <field name="constraint_ids" context="{'default_flow_id': parent.flow_id, 'model_name': parent.model_name}">
                        <tree>
                            <field name="name"/>
                            <field name="domain"/>
                            <field name="group_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_workflow_transition" model="ir.actions.act_window">
        <field name="name">Transitions</field>
        <field name="res_model">workflow.transition</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
