<odoo>
    <record id="crm_lead_view_form_inherit_workflow" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.workflow</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_name" type="object" class="btn-primary" string="Next Stage" />
            </xpath>

            <field name="team_id" position="after">
                <field name="workflow_id" options="{'no_create': True}"/>
                <field name="workflow_stage_id" readonly="1"/>
            </field>
        </field>
    </record>
</odoo>