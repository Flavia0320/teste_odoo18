<odoo>
    <record id="view_workflow_stage_list" model="ir.ui.view">
        <field name="name">workflow.stage.list</field>
        <field name="model">workflow.stage</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="flow_id"/>
                <field name="is_entry"/>
                <field name="is_stop"/>
            </list>
        </field>
    </record>

    <record id="view_workflow_stage_form" model="ir.ui.view">
        <field name="name">workflow.stage.form</field>
        <field name="model">workflow.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="flow_id" readonly="1"/>
                    </group>
                    <field name="transition_ids" readonly="1">
                        <list>
                            <field name="to_stage_id"/>
                            <field name="constraint_ids"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_workflow_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">workflow.stage</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
