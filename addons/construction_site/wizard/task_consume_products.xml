<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="project_task_product_consume_wizard_form" model="ir.ui.view"> 
                <field name="name">project.task.product.consume.wizard Form</field>
                <field name="model">project.task.product.consume.wizard</field>
                <field name="type">form</field> 
                <field name="arch" type="xml">
                    <form string="Form project.task.product.consume.wizard">
                        <sheet>
                            <group>
                                <field name="task_id" readonly="1"/>
                            </group>
                            <notebook>
                                <page string="Products">
                                    <field name="product_ids">
                                        <list editable="bottom" create="false">
                                            <field name="product_line_id" invisible="1"/>
                                            <field name="product_id"/>
                                            <field name="uom_id"/>
                                            <field name="max_limit" invisible="1"/>
                                            <field name="quantity"/>
                                        </list>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                        <footer>
                            <button name="execute" string="Execute" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel" />
                        </footer>
                    </form>
                </field>
        </record>

        <record id="project_task_product_consume_wizard_action" model="ir.actions.act_window"> 
            <field name="name">project.task.product.consume.wizard Action</field>
            <field name="res_model">project.task.product.consume.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    
</odoo>
        
