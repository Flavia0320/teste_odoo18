<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_fprint.addReports">
        <Dialog contentClass="reports">
            <t t-set-slot="header">
                <div class="d-flex flex-grow-1 justify-content-between">
                    <h4 class="align-middle my-1">Reports</h4>
                </div>
            </t>
            <div class="body">
                <p>Select a report type to proceed.</p>
            </div>
            <t t-set-slot="footer">
                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-primary" t-on-click="reportX">Report X</button>
                    <button class="btn btn-primary" t-on-click="reportZ">Report Z</button>
                    <button class="btn btn-secondary" t-on-click="cancel">Cancel</button>
                </div>
            </t>
        </Dialog>
    </t>
</templates>
