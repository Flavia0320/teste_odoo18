<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<record id="contract_doc_related_template_form" model="ir.ui.view">
		<field name="name">Contract Doc Related Template Form</field>
        <field name="model">smart.contract.related.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
	        <form>
        	<sheet>
        		<group>
        			<group>
        				<field name="name"/>
        				<field name="server_action"/>
        			</group>
        			<group>
        				<field name="autoexec"/>
        			</group>
        		</group>
        		<group invisible="autoexec == False">
        			<group>
        				<field name="exec_date" required="autoexec == True"/>
        			</group>
        			<group>
        				<field name="racursiv"/>
        			</group>
        		</group>
        		<notebook>
        			<page string="Data Set">
        				<field name="aditional_data_ids">
        					<list>
        						<field name="name"/>
        						<field name="number"/>
        						<field name="currency_id"/>
        						<field name="data"/>
        						<field name="text"/>
        					</list>
        				</field>
        			</page>
        			<page string="Settings">
        				<group>
        					<group>
        						<field name="res_model" readonly="1"/>
        						<field name="res_id" readonly="1"/>
        					</group>
        				</group>
        			</page>
        		</notebook>
        	</sheet>
        	</form>
        </field>
	</record>

	<record id="contract_doc_related_template_tree" model="ir.ui.view">
		<field name="name">Contract Doc Related Template Tree</field>
        <field name="model">smart.contract.related.template</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
        	<list>
        		<field name="name"/>
        		<field name="server_action"/>
        		<field name="autoexec"/>
        	</list>
        </field>
    </record>
</odoo>