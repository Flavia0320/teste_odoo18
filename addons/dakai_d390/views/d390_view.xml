<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="d390_form_view">
            <field name="name">Declaratie 390 Form</field>
            <field name="model">l10_romania.report.d390</field>
            <field name="arch" type="xml">
                <form string="Declaratie 390">
                    <header>
                        <button name="rebuild_declaration" string="Rebuild" type="object" class="btn-primary"/>
                        <button name="export_declaration" string="Export" type="object" class="btn-primary"/>
<!--                        <field name="state" widget="statusbar"/>-->
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="version"/>
                                <field name="company_id"/>
                                <field name="reprezentant_id"/>
                                <field name="d_rec"/>
                            </group>
                            <group>
                                <field name="luna"/>
                                <field name="an"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Operatie">
                                <field name="operatie_ids"/>
                            </page>
                            <page string="Cos">
                                <field name="cos_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="d390_list_view">
            <field name="name">Declaratie 390 list</field>
            <field name="model">l10_romania.report.d390</field>
            <field name="arch" type="xml">
                <list string="Declaratii 390">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_d390">
            <field name="name">Declaratie 390</field>
            <field name="res_model">l10_romania.report.d390</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="d390_menu" name="Declaratii 390"
            parent="dakai_declarations_common.declaration_menu" sequence="10" action="action_d390"/>
    </data>
</odoo>
