<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<record id="contract_regulation_form" model="ir.ui.view">
		<field name="name">Contract Set Form</field>
        <field name="model">smart.contract.regulation</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
        	<form>
	        	<sheet>
	        		<group>
	        			<group>
	        				<field name="name"/>
	        				<field name="sequence_current" readonly="1"/>
	        			</group>
	        			<group>
	        				<field name="serial_id"/>
	        				<field name="document_type"/>
	        			</group>
	        		</group>
	        	</sheet>
        	</form>
        </field>
	</record>
	
	<record id="contract_regulation_tree" model="ir.ui.view">
		<field name="name">Contract Set Tree</field>
        <field name="model">smart.contract.regulation</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
        	<list>
        		<field name="name"/>
        		<field name="sequence_current"/>
        	</list>
        </field>
    </record>


    <record id="action_contract_regulation" model="ir.actions.act_window">
        <field name="name">Contract Set</field>
        <field name="res_model">smart.contract.regulation</field>
        <field name="view_mode">list,form</field>
    </record>

	<menuitem id="contract_config"
		name="Configuration"
		parent="root_menu_contracts"
		sequence="2"
		/>

    <menuitem id="menu_template_contracts"
        name="Contract Templates"
        sequence="2"
        parent="contract_config"
        action="action_template_contract" />
        
    <menuitem id="contract_regulation_menu"
		name="Contract Sets"
		parent="contract_config"
		sequence="50"
		action="action_contract_regulation"
		/>
</odoo>