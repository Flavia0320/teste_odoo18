<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="template_contract_email" model="mail.template">
            <field name="name">Contract Email Template</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Contract pentru comanda #${object.name}</field>
            <field name="email_from">${(object.user_id.email or 'noreply@example.com')}</field>
            <field name="email_to">${object.partner_id.id}</field>
            <field name="body_html">
                <![CDATA[
                <p>Bună ziua,</p>
                <p>Vă trimitem atașat contractul pentru comanda dvs. <b>${object.name}</b>.</p>
                <p>Cu stimă,<br/>Echipa noastră</p>
            ]]>
            </field>
        </record>
    </data>
</odoo>