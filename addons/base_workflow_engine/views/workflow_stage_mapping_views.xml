<odoo>
    <record id="view_workflow_stage_mapping_form" model="ir.ui.view">
        <field name="name">workflow.stage.mapping.form</field>
        <field name="model">workflow.stage.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="flow_id"/>
                        <field name="model_stage_id"/>
                        <field name="workflow_stage_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_stage_mapping_list" model="ir.ui.view">
        <field name="name">workflow.stage.mapping.list</field>
        <field name="model">workflow.stage.mapping</field>
        <field name="arch" type="xml">
            <list>
                <field name="flow_id"/>
                <field name="model_stage_id"/>
                <field name="workflow_stage_id"/>
            </list>
        </field>
    </record>
</odoo>